{
  "compilerOptions": {
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "baseUrl": "src",
    "outDir": "dist",
    "sourceMap": true,
    "noImplicitAny": true,
    "strict": true,
    "paths": {
      "@/*": [
        "*"
      ],
      "@/config/*": [
        "config/*"
      ],
      "@/database/*": [
        "database/*"
      ],
      "@/features/*": [
        "features/*"
      ],
      "@/docs/*": [
        "docs/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}